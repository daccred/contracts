{
    "compilerOptions": {
      "lib": ["ES2018", "DOM"],
      "module": "CommonJS",
      "outDir": "./build",
      "rootDir": "./src",
      "allowJs": true,
      "moduleResolution": "node",
      "strict": true,
      "target": "ES2018",
      "types": ["@types/node", "@types/chai", "@types/mocha"],
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "sourceMap": true,
      "esModuleInterop": true
    },
    "include": ["src/migrations/*", "src/types/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }