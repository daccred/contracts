{
  "name": "@daccred/contracts",
  "version": "1.0.0",
  "description": "ðŸ¦„ Core smart contracts of Daccred",
  "license": "ISC",
  "author": "",
  "homepage": "https://github.com/Centv2/contracts-v1-core#readme",
  "main": "truffle-config.js",
  "scripts": {
    "compile": "rm -rf build/contracts && truffle compile",
    "format": "yarn format:sol && yarn format:ts",
    "format:sol": "prettier --write 'src/contracts/**/*.sol'",
    "format:ts": "prettier --write **/*.{ts,js}",
    "postinstall": "yarn compile && yarn typegen",
    "lint": "tsc --pretty --noEmit",
    "hint": "solhint 'src/contracts/**/*.sol'",
    "build": "yarn compile && yarn typegen",
    "migrate:dev": "rm -rf build/migrations && tsc && truffle migrate --network development",
    "migrate:testnet": "rm -rf build/migrations && tsc && truffle migrate --network testnet",
    "migrate:bsc": "tsc && truffle migrate --network bsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "truffle": "truffle",
    "typegen": "typechain --target=truffle-v5 --out-dir src/types 'build/contracts/*.json'",
    "verify": "truffle run verify Badge --network"
  },
  "devDependencies": {
    "@manifoldxyz/libraries-solidity": "^1.0.2",
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.13",
    "@openzeppelin/truffle-upgrades": "^1.9.1",
    "@truffle/hdwallet-provider": "^1.5.0",
    "@typechain/truffle-v5": "^5.1.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "mocha": "^9.1.1",
    "prettier": "^2.4.1",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "truffle": "^5.4.8",
    "truffle-assertions": "^0.9.2",
    "truffle-plugin-verify": "^0.5.15",
    "ts-mocha": "^8.0.0",
    "typechain": "^5.1.2",
    "typescript": "^4.4.2"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daccred/contracts.git"
  },
  "bugs": {
    "url": "https://github.com/daccred/contracts/issues"
  },
  "pre-commit": "lint-staged",
  "husky": {
      "hooks": {
          "pre-commit": "lint-staged",
          "pre-push": "yarn build"
      }
  },
  "lint-staged": {
      "*.@(ts|sol)": [
          "yarn format",
          "yarn hint",
          "yarn lint"
      ]
  }
}
