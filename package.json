{
  "name": "@daccred/contracts",
  "version": "1.0.1",
  "description": "ðŸ¦„ Core smart contracts of Daccred",
  "license": "ISC",
  "author": "",
  "homepage": "https://github.com/daccred/contracts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daccred/contracts.git"
  },
  "bugs": {
    "url": "https://github.com/daccred/contracts/issues"
  },
  "main": "truffle-config.js",
  "scripts": {
    "build": "yarn compile && yarn typegen",
    "compile": "rimraf build/contracts && truffle compile",
    "format": "yarn format:sol && yarn format:ts",
    "format:sol": "prettier --write 'src/contracts/**/*.sol'",
    "format:ts": "prettier --write **/*.{ts,js}",
    "hint": "solhint 'src/contracts/**/*.sol'",
    "postinstall": "yarn compile && yarn typegen",
    "lint": "tsc --pretty --noEmit",
    "migrate:bsc": "tsc && truffle migrate --network bsc",
    "migrate:dev": "rimraf build/migrations && tsc && truffle migrate --network development",
    "migrate:testnet": "rimraf build/migrations && tsc && truffle migrate --network testnet",
    "test": "echo \"Error: no test specified\" && exit 1",
    "truffle": "truffle",
    "typegen": "typechain --target=truffle-v5 --out-dir src/types 'build/contracts/*.json'",
    "verify": "truffle run verify Badge --network"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/truffle-upgrades": "^1.15.0",
    "@truffle/hdwallet-provider": "^1.5.0",
    "@typechain/truffle-v5": "^5.1.0",
    "truffle": "^5.5.18",
    "truffle-assertions": "^0.9.2",
    "truffle-plugin-verify": "^0.5.26",
    "typechain": "^5.1.2"
  },
  "devDependencies": {
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "mocha": "^9.1.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.4.2"
  },
  "keywords": [],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "*.@(ts|js)": [
      "yarn format:ts"
    ],
    "*.@(sol)": [
      "yarn format:sol",
      "yarn hint"
    ]
  },
  "pre-commit": "lint-staged"
}
