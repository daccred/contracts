{
  "name": "@daccred/nft-contracts",
  "version": "0.0.0",
  "description": "The Daccred ERC721 contract extensions",
  "keywords": [
    "daccred",
    "soulbound",
    "nft",
    "ethereum"
  ],
  "author": "Andrew Miracle <me@andrewmiracle.com>",
  "homepage": "https://github.com/daccred/contracts#readme",
  "license": "MIT",
  "directories": {
    "lib": "contracts",
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daccred/contracts.git"
  },
  "files": [
    "/contracts/**/*.sol",
    "./types",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*"
  ],
  "scripts": {
    "node": "hardhat node",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "coverage": "REPORT_COVERAGE=true npx hardhat coverage",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:es": "eslint --ignore-path .gitignore . --fix"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.15",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "ethereum-waffle": "^3.4.0",
    "@typechain/ethers-v5": "^10.1.0"
  },
  "bugs": {
    "url": "https://github.com/daccred/contracts/issues"
  }
}
